<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChangePinActivity"
        android:orientation="vertical">
        <TextView
            android:id="@+id/changePinTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan PIN terbaru yang anda inginkan pada kolom di bawah:"
            android:textSize="24sp"
            android:layout_margin="16dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>
        <EditText
            android:id="@+id/newPinFieldUpper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Masukkan PIN baru"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:inputType="numberPassword"/>
        <EditText
            android:id="@+id/newPinFieldBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan ulang PIN baru"
            android:layout_margin="8dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:inputType="numberPassword"/>
        <Button
            android:id="@+id/confirmNewPinButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/ok" />
    </LinearLayout>
</layout>