<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:orientation="vertical"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- TextView Nama Immobilizer -->
            <TextView
                android:id="@+id/item_unregistered_immo_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Honda Beat"
                android:textSize="16sp"
                android:layout_margin="8dp"/>
            <TextView
                android:id="@+id/item_unregistered_immo_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="00:00:00:00:00:00"
                android:layout_margin="8dp" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="end"
                android:id="@+id/item_register_device_button"
                android:text="Daftar" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>