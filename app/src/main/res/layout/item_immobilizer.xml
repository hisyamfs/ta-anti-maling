<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <!-- TextView Nama Immobilizer -->
        <TextView
            android:id="@+id/item_immo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@id/item_immo_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Tombol request -->
        <Button
            android:id="@+id/item_unlockDeviceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:text="@string/verify" />

        <Button
            android:id="@+id/item_changeUserPinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:text="@string/changeUserPinButtonText" />

        <Button
            android:id="@+id/item_removePhoneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            android:text="Hapus Akun" />

        <!-- Tombol connect/disconnect -->
        <Button
            android:id="@+id/item_toggleConnectionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            android:text="Connect/Disconnect" />
    </LinearLayout>
</layout>