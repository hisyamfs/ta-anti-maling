<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:orientation="vertical"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- TextView Nama Immobilizer -->
            <TextView
                android:id="@+id/item_immo_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Honda Beat"
                android:textSize="24sp"
                android:layout_margin="8dp"/>
            <TextView
                android:id="@id/item_immo_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="00:00:00:00:00:00"
                android:layout_margin="8dp" />
            <!-- Tombol request -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/item_unlockDeviceButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:text="Unlock" />
                <Button
                    android:id="@+id/item_changeUserPinButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="8dp"
                    android:text="@string/changeUserPinButtonText" />
                <Button
                    android:id="@+id/item_removePhoneButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_gravity="end"
                    android:text="Hapus Akun" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Tombol connect/disconnect -->
                <Button
                    android:id="@+id/item_toggleConnectionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_gravity="end"
                    android:text="Connect/Disconnect" />
                <Button
                    android:id="@+id/item_renameDeviceButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_gravity="end"
                    android:text="Rename" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>